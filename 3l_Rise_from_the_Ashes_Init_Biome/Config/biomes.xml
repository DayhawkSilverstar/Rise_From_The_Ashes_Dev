<configs>
	<!-- birds nest with eggs for snow -->
	<insertAfter xpath="/worldgeneration/biomes/biome[@name='snow']/decorations/decoration[@blockname='cntBirdnest']">
		<decoration type="block" blockname="cntBirdnestWithEggs" prob="0.001"/>
	</insertAfter>

	<insertAfter xpath="/worldgeneration/biomes/biome[@name='snow']/subbiome/decorations/decoration[@blockname='cntBirdnest']">
		<decoration type="block" blockname="cntBirdnestWithEggs" prob="0.001"/>
	</insertAfter>	

